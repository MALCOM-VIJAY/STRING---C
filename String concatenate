//LOGIC 2
#include <stdio.h>
int main()
{
    char a[100]={"mal"};
    char b[100]={"com"};
    int i=0;
    for( i=0;a[i]!='\0';i++){
    }
    for(int j=0;b[j]!='\0';j++){
        a[i]=b[j];
        i++;
    }
    a[i]='\0';
    printf("%s",a);
    return 0;
}
